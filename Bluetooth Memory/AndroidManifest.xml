	package="de.fhgiessen.mni.bluememory"
	android:versionCode="1"
	android:versionName="1.0">
	
	<application android:icon="@drawable/icon" 
		android:label="@string/app_name" 
		android:debuggable="true"
		android:theme="@style/BlueTheme">
 
		<activity android:name=".Hauptmenue"
			android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity android:name=".Anleitung"
			android:label="@string/app_name" />
		
		<activity
			android:name=".Lobby"
			android:label="@string/app_name" />
		
		<activity
			android:name=".SpielErstellen"
			android:label="@string/app_name" />
		
		<activity 
			android:name=".SpielTeilnehmen"
			android:label="@string/app_name" />
		
		<activity 
			android:name=".Spiel"
			android:screenOrientation="portrait"
			android:label="@string/app_name" />
		
		<activity 
			android:name=".Profil"
			android:screenOrientation="portrait"
			android:label="@string/app_name" />
		
		<activity
			android:name=".DecksVerwalten"
			android:label="@string/app_name" />
		
		<activity
			android:name=".DeckHinzufuegen"
			android:label="@string/app_name" />
		
		<activity
			android:name=".DeviceList"
			android:label="@string/app_name" />
		
		<service android:name=".ServerService" />
	</application>

	<uses-sdk android:minSdkVersion="8" />
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
	<uses-permission android:name="android.permission.BLUETOOTH" />
</manifest>